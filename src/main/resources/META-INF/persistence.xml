<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="unit" transaction-type="RESOURCE_LOCAL">
        <mapping-file>META-INF/hibernate/AccountSettings.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Balance.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Cheque.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Commission.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Cover.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Observation.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Operation.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/PolicyHolder.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/Receipt.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/ReceiptStatus.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/ReferenceData.hbm.xml</mapping-file>
        <mapping-file>META-INF/hibernate/TransactionDetail.hbm.xml</mapping-file>
        <exclude-unlisted-classes />
    </persistence-unit>
</persistence>